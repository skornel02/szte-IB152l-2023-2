@page
@model Backend.Pages.LoginModel
@{
}

<main role="main" class="container pb-3 flex-grow-1 d-flex flex-column justify-content-center">
    <div class="row">
        @if (Model.DisplayMessage is not null)
        {
            <div class="col-12">
                <div class="alert alert-primary" role="alert">
                    @Model.DisplayMessage
                </div>
            </div>
        }
        <div class="col-md-6 login-form-1">
            <h3>Bejelentkezés</h3>
            <form method="post">
                <div class="form-group">
                    @Html.LabelFor(_ => _.LoginEmail)
                    <input asp-for="LoginEmail" type="text" class="form-control" placeholder="Your Email *" value="" />

                    <small id="emailHelp" class="form-text text-danger">
                        @Html.ValidationMessageFor(_ => _.LoginEmail)
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.LoginPassword)
                    <input asp-for="LoginPassword" type="password" class="form-control" placeholder="Your Password *" value="" />

                    <small id="emailHelp" class="form-text text-danger">
                        @Html.ValidationMessageFor(_ => _.LoginPassword)
                    </small>
                </div>
                <div class="d-none">
                    <input asp-for="Intention" value="@LoginIntention.Login" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Bejelentkezés" />
                </div>
            </form>
        </div>
        <div class="col-md-6 login-form-2">
            <h3>Regisztráció</h3>
            <form method="post">
                <div class="form-group">
                    @Html.LabelFor(_ => _.RegisterEmail)
                    <input asp-for="RegisterEmail" type="text" class="form-control" placeholder="Your Email *" value="" />

                    <small id="emailHelp" class="form-text text-danger">
                        @Html.ValidationMessageFor(_ => _.RegisterEmail)
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.RegisterPassword)
                    <input asp-for="RegisterPassword" type="password" class="form-control" placeholder="Your Password *" value="" />

                    <small id="emailHelp" class="form-text text-danger">
                        @Html.ValidationMessageFor(_ => _.RegisterPassword)
                    </small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(_ => _.RegisterPasswordConfirmation)
                    <input asp-for="RegisterPasswordConfirmation" type="password" class="form-control" placeholder="Your Password again *" value="" />

                    <small id="emailHelp" class="form-text text-danger">
                        @Html.ValidationMessageFor(_ => _.RegisterPasswordConfirmation)
                    </small>
                </div>
                <div class="d-none">
                    <input asp-for="Intention" value="@LoginIntention.Register" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Regisztrálás" />
                </div>
            </form>
        </div>
    </div>
</main>